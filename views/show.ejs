<%layout('/layouts/boilerplate.ejs') %>
<body>
<div class="show-body">
 
  <div class="show-container">
    <div class="post_title">
      <% if((currUser && currUser.auth=='admin')||(currUser && currUser.auth==('phd'||'mtech')&&currUser.username==project.postedBy)){%>
    
        <div style="margin: 1rem 0 0 auto;" class="show-btns">
         
          <a type="button" class="btn btn-outline-dark" href="/projects/<%=project._id%>/edit">Edit</a>
          &nbsp;&nbsp;
          <form style="display: inline-block; margin: 0;" method="post" action="/projects/<%=project._id%>/delete/?_method=DELETE">
          <button class="btn btn-outline-dark" >Delete</button>
        </form>
         </div>
       <%}%>
      <div class="project_name"><h3 style="margin-bottom: 0.3rem;"><%= project.projectName %></h3></div>
      <div class="postedby"><h5 style="display: inline-block;">Posted By:</h5> &nbsp; &nbsp; <%=project.postedBy %></div>
    </div>
    <div class="post_info">
     
      <div class="site"><p><i class="fa-solid fa-house"></i>&nbsp;&nbsp;&nbsp;<%=project.job_location.charAt(0).toUpperCase()
        + project.job_location.slice(1) %></p></div>
      <div class="date-info">
        <div>
          <span class="grey-text" > <i class="fa-regular fa-circle-play"></i> <h6>START DATE</h6></span><br>
         Immediately
        </div>
        <div>
          <span class="grey-text"><i class="fa-solid fa-user"></i> <h6>VACANCIES AVAILABLE</h6></span><br>
          <%=project.requirements %>
        </div>
        <div>
          <span class="grey-text"><i class="fa-regular fa-calendar"></i> <h6>DURATION</h6></span><br>
          <%=project.duration %>
        
        </div>
        <div>
          <span class="grey-text"><h6>DOMAIN</h6></span><br>
          <%=project.domain.charAt(0).toUpperCase()
          + project.domain.slice(1) %>
        </div>
      </div>
    </div>
    <br>
    <hr>
    <div class="description">
      <h4>ABOUT THE PROJECT</h4>
      <p><%=project.description%></p>
    </div>
    <div class="description">
      <h4>Skills Required</h4>
     <ul class="skill-list">
      <% for(li of project.skills){ %>
        <li class="skill"><%=li%></li>
      <%}%>
     </ul>
    </div>
    <div class="description">
      <br> <hr>
  <button class="btn btn-outline-primary">APPLY NOW</button>
    </div>
   </div>
  
</div>
</body>